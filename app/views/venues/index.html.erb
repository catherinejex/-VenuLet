<div class="container">
  <h2 class="venues-text">All venues</h2>
  <div class='d-flex'>
    <h2 style='margin-right: 20px; font-family: Noto Serif Display, serif; margin-top: 8px'>Filters</h2>
    <%= form_tag venues_path, class: "filter-form", method: :get do %>
      <%= text_field_tag :location,
      params[:location],
      class: "filter-input",
      placeholder: "Location"
      %>
      <%= text_field_tag :size,
      params[:size],
      class: "filter-input",
      placeholder: "Size in Square Meters"
      %>
      <%= text_field_tag :rate,
      params[:rate],
      class: "filter-input",
      placeholder: "Rate"
      %>
    <%= submit_tag "Find My Venue!", class: "filter-submit-button" %>
    <% end %>
  </div>
  <div class='cards'>
    <% @venues.each do |venue| %>
    <div class="card-venue">
      <div class="card-image" style="background-image: url(<%= venue.image_url %>)">
        <button class="btn btn-light btn-venue">
          <%= link_to "Book now", venue_path(venue), :style=> 'color:white' %>
        </button>
      </div>
      <div class="card-body">
        <div class="card-info">
          <h3><%= venue.title %></h3>
          <p class="location-text"><i class="fa fa-map-pin"></i> <%= venue.location %></p>
          <p><%= venue.description.split('.')[0] %>...</p>
        </div>
        <div class="card-price">
          <p>Â£<%= venue.rate %>/day</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
