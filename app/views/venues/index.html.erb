<div class="container">
  <h2 class="venues-text">All venues</h2> <span><%= link_to 'View Map', map_venues_path %> </span>
  <div class='cards'>
    <% @venues.each do |venue| %>
    <div class="card-venue">
      <div class="card-image" style="background-image: url(<%= venue.image_url %>)">
        <button class="btn btn-light btn-venue">
          <%= link_to "Book now", venue_path(venue), :style=> 'color:white' %>
        </button>
      </div>
      <div class="card-body">
        <div class="card-info">
          <h3><%= venue.title %></h3>
          <p class="location-text"><i class="fa fa-map-pin"></i> <%= venue.location %></p>
          <p><%= venue.description.split(' ')[0..20].join(" ") %>...</p>
        </div>
        <div class="card-price">
          <p>Â£<%= venue.rate %>/day</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
